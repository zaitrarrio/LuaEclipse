<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="nature"
         name="Lua Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.keplerproject.dltk.ldt.core.LuaNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
         <content-type
			base-type="org.eclipse.core.runtime.text"
            describer="org.keplerproject.dltk.ldt.core.LuaContentTypeDescriber"
            file-extensions="lua"
            id="org.keplerproject.dltk.ldt.content-type"
            name="Lua Content Type"
            priority="high"
            />
   </extension>
   <extension
         point="org.eclipse.dltk.core.language">
      <language
            class="org.keplerproject.dltk.ldt.core.LuaLanguageToolkit"
            nature="org.keplerproject.dltk.ldt.nature"
            priority="0"/>
   </extension>

   <extension point="org.eclipse.dltk.core.sourceElementParsers">
      <parser
            class="org.keplerproject.dltk.ldt.core.parser.StubLuaSourceElementParser"
            nature="org.keplerproject.dltk.ldt.nature"
            priority="0">
      </parser>
</extension>

 <extension
       point="org.eclipse.dltk.launching.interpreterInstallTypes">
    <interpreterInstallType
          class="org.keplerproject.dltk.ldt.interpreter.LuaInterpreterInstallType"
          id="org.keplerproject.dltk.ldt.debug.ui.LuaInterpreterInstallType">
    </interpreterInstallType>
 </extension>
 <extension
       point="org.eclipse.dltk.core.completionEngine">
    <completionEngine
          class="org.keplerproject.dltk.ldt.LuaCompletionEngine"
          nature="org.keplerproject.dltk.ldt.LuaCompletionEngine"
          priority="0">
    </completionEngine>
 </extension>
</plugin>
