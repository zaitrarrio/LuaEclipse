<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.koneki.ldt.editor.LuaEditor"
            default="false"
            icon="img/lua-logo.gif"
            id="org.eclipse.koneki.ldt.editor"
            name="Lua Editor">
         <contentTypeBinding
               contentTypeId="org.eclipse.koneki.ldt.content-type">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.koneki.ldt.editor.internal.text.LuaPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.dltk.ui.modelLabelProvider">
      <modelLabelProvider
            class="org.eclipse.koneki.ldt.editor.internal.navigation.LuaLabelProvider"
            id="org.eclipse.koneki.ldt.editor.modelLabelProvider"
            language="org.eclipse.koneki.ldt.nature">
      </modelLabelProvider>
   </extension>
 <extension
         point="org.eclipse.dltk.core.completionEngine">
      <completionEngine
            class="org.eclipse.koneki.ldt.editor.internal.completion.LuaCompletionEngine"
            nature="org.eclipse.koneki.ldt.nature"
            priority="0">
      </completionEngine>
   </extension>
   <extension
         id="LuaTypeCompletionProposalComputer"
         name="LuaEclipse code assistance"
         point="org.eclipse.dltk.ui.scriptCompletionProposalComputer">
      <scriptCompletionProposalComputer
            activate="true"
            categoryId="org.eclipse.dltk.ui.scriptTypeProposalCategory"
            class="org.eclipse.koneki.ldt.editor.internal.completion.LuaCompletionProposalComputer"
            toolkitId="org.eclipse.koneki.ldt.nature">
         <partition
               type="__dftl_partition_content_type">
         </partition>
      </scriptCompletionProposalComputer>
   </extension>
</plugin>
